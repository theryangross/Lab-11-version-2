@page
@model Lab_11_version_2.Pages.ProfessorModel
@{
    ViewData["Title"] = "Professor Page";
}

<h3>Professors</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="p.ProfessorId" class="control-label"></label>
                <select asp-for="p.ProfessorId" asp-items="Model.ProfessorDropDown" class="form-control">
                    <option value="">-- Select Professor --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<p>You selected '@Model.FirstName @Model.LastName'.</p>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}